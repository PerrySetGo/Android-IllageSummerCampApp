<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guest.illageSummerCamp" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".IllageApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCe_62jyCmQHnztyU_UqMKSbmw1eXJL-H4"/>


        <activity
            android:name=".ui.IllageMapActivity"
            android:label="@string/title_activity_illage_map" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="IllageCamp.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".ui.AllEventsActivity"
            android:label="@string/title_activity_all_events"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.NextEventActivity" >
        </activity>
        <activity android:name=".ui.AboutCampActivity" >
        </activity>
        <activity
            android:name=".ui.ContactActivity"
            android:label="@string/title_activity_contact"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.illageSummerCamp.ui.MainActivity" />
        </activity>
    </application>

</manifest>
