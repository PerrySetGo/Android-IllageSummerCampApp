<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perrysetgo.illageSummerCamp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".IllageApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.IllageMapActivity"
            android:label="@string/title_activity_illage_map">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD5qGMJl2ZSQyrWQQHMITtquXzXiCINx0Q" />

        <activity
            android:name=".ui.AllEventsActivity"
            android:label="@string/title_activity_all_events"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.perrysetgo.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.perrysetgo.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.NextEventActivity" />
        <activity android:name=".ui.AboutCampActivity" />
        <activity
            android:name=".ui.ContactActivity"
            android:label="@string/title_activity_contact"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.perrysetgo.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.perrysetgo.illageSummerCamp.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.SignUpActivity" />
        <activity android:name=".ui.SignInActivity" />
        <activity android:name=".ui.AddPhotoActivity" />
        <activity android:name=".ui.PhotoGalleryActivity"></activity>
    </application>

</manifest>