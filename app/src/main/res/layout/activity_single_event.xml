<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.guest.illageSummerCamp.ui.SingleEventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of Awesome Event"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/locationTextView"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time:"
        android:id="@+id/textView2"
        android:layout_below="@+id/locationTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginTop="86dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, a quam habitasse. Libero sociis fringilla est, est sit, ut nulla aute odio mattis. Justo sed fusce amet, id lorem adipiscing id eros blandit, rutrum ultricies ridiculus neque vel ac, nunc ullamcorper malesuada proin. Donec sapien sed nunc, pede consectetuer sodales nulla metus rutrum consequat, suscipit velit adipiscing, nec et ac elementum et augue. Convallis lorem, molestie dui et ultrices aut. Pede ac fusce dolor lobortis est. Dapibus natoque, nec vel magna et nec pharetra, ante pede. Sit eros. At malesuada sed ridiculus, per dui vivamus, laboriosam amet justo vel ultrices, proin et egestas mollis suscipit, libero dictum volutpat. Mauris nulla sit est vitae tellus, dapibus augue leo mi, odio mauris, luctus nibh id arcu dis aliquet taciti, orci velit magnis donec leo fringilla. Varius metus qui purus porttitor amet ante, vel vehicula, habitasse mollis erat nulla tellus felis, eu donec integer consectetuer wisi rutrum at, habitasse volutpat amet. Venenatis accumsan."
            android:id="@+id/textView5"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"/>
    </ScrollView>

</RelativeLayout>
