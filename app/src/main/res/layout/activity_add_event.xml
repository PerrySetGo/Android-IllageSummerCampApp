<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Event"
        android:id="@+id/newEventLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTitle"
        android:layout_below="@+id/newEventLabel"
        android:layout_marginTop="32dp"
        android:hint="What&apos;s this event called?"
        android:layout_alignRight="@+id/eventSubmitButton"
        android:layout_alignEnd="@+id/eventSubmitButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/eventSubmitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editDate"
        android:layout_below="@+id/editTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:id="@+id/startTimeLabel"
        android:layout_below="@+id/editDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editStartTime"
        android:layout_below="@+id/startTimeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:id="@+id/endTimeLabel"
        android:layout_below="@+id/editStartTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editEndTime"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/endTimeLabel"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editDescription"
        android:layout_below="@+id/editEndTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@+id/eventSubmitButton"
        android:layout_alignEnd="@+id/eventSubmitButton"
        android:hint="Event Description"
        android:elegantTextHeight="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editLocation"
        android:layout_below="@+id/editDate"
        android:layout_toEndOf="@+id/endTimeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Location?"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would You Like To Add Another Event?"
        android:id="@+id/addNewEventLabel"
        android:layout_below="@+id/editTitle"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/newEventButton"
        android:layout_alignBottom="@+id/noNewButton"
        android:layout_toRightOf="@+id/startTimeLabel"
        android:layout_toEndOf="@+id/startTimeLabel"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Thanks"
        android:id="@+id/noNewButton"
        android:layout_alignBottom="@+id/editLocation"
        android:layout_toRightOf="@+id/newEventButton"
        android:layout_toEndOf="@+id/newEventButton"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MM/DD/YYYY only"
        android:id="@+id/textView"
        android:layout_below="@+id/editTitle"
        android:layout_toRightOf="@+id/newEventLabel"
        android:layout_toEndOf="@+id/newEventLabel"
        android:layout_alignParentStart="false"/>

</RelativeLayout>