<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.perrysetgo.illageSummerCamp.ui.NextEventActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nextEventTitleBox"
        android:layout_below="@+id/nextEventTitleLabel"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/nextEventLocationBox"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_below="@+id/nextEventLocationLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:visibility="invisible"
        android:id="@+id/nextEventDateTimeBox"
        android:layout_below="@+id/nextDateTimeLabel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_time"
        android:visibility="visible"
        android:id="@+id/currentTimeLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/the_next_event_is"
        android:id="@+id/nextEventTitleLabel"
        android:layout_below="@+id/currentTimeLabel"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="#ff1438"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_next"
        android:id="@+id/nextEventLocationLabel"
        android:gravity="center_vertical|center_horizontal"
        android:background="#ff1438"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:layout_below="@+id/nextEventTitleBox"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_next"
        android:id="@+id/nextDateTimeLabel"
        android:gravity="center_vertical|center_horizontal"
        android:background="#ff1438"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_below="@+id/nextEventLocationBox"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_next"
        android:id="@+id/nextEventDescriptionLabel"
        android:gravity="center_vertical|center_horizontal"
        android:background="#ff1438"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_below="@+id/nextEventDateTimeBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_apos_re_invited"
        android:id="@+id/invitedText"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loading_event"
        android:id="@+id/eventsStatusBox"
        android:visibility="invisible"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/nextEventDescriptionBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:visibility="invisible"
        android:id="@+id/nextEventDescriptionBox"
        android:layout_below="@+id/nextEventDescriptionLabel"
        android:layout_alignParentStart="true" />

</RelativeLayout>
